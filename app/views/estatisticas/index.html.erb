<div class="row"> 
    <div class="x_panel" STYLE="MARGIN-LEFT:9PX;width: 98.9%;background: #ffffff;box-shadow: 0px 0px 3px #415467;">
        <div class="x_title" style="color: #4a6e90;">
            <h2>Atividade da semana<small><%= Time.now.strftime("%d/%m/%Y")%></small></h2> 
            <div class="clearfix"></div>
        </div> 
            <div class="dashboard-widget-content" style="margin-top: -51px;margin-left: -30px;">

                <ul class="list-unstyled timeline widget">
                    <%= week_calendar events: @atividades do |date, atividades| %> 
                        <% atividades.each do |atividade| %>  
                            <% if atividade.status == "Aberto"%>  
                                <li style="display: block;width: 1539px;margin-left: -250px;">  
                                    <div class="block">
                                        <div class="block_content">
                                            <h2 class="title" ><a style="margin-left: 4px;"><%=atividade.titulo%></a></h2>
                                            <div class="byline">
                                            <span><%=atividade.agendamento.strftime("%d/%m/%Y as %H:%M ")%></span><span>, Tipo: <%=atividade.tipo%>, </span>
                                            <br> 
                                            <div class="<%=atividade.nivel%>">   
                                                <span>Nivel <%=atividade.nivel%>. </span>
                                            </div>
                                            </div>
                                            <p class="excerpt"><%=atividade.resumo.unpack(("a%i" % 45) * (atividade.resumo.size / 45.0).ceil).join("\n").force_encoding("UTF-8")%><br>
                                            </p>
                                            <a><%= link_to 'Visualizar Atividade', atividade, class:"btn_consulta", style:"width: 166px;text-align: center;font-size: 14px;float: right;margin-top: -17px;"%></a>
                                        </div>
                                    </div>   
                                </li>  
                            <% end %> 
                        <% end %>
                    <% end %>
                </ul>
            </div> 
    </div> 
</div>  

