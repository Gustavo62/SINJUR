<%= javascript_include_tag 'Chart.bundle', 'chartkick'%>  
<%= javascript_include_tag "https://www.gstatic.com/charts/loader.js" %> 
<div class="col-md-4 col-sm-4 " style="width: 30.8%;">
    <div class="x_panel tile fixed_height_320 overflow_hidden"  style="margin-left: -11px;height: auto;min-height:522px;background: #ffffff;box-shadow: 0px 0px 3px #415467;">
    <div class="x_title" style="color: #4a6e90;">
        <h2>Atendimentos<small>Por periodo do mês.</small></h2> 
        <div class="clearfix"></div>
    </div>
    <div class="x_content">
        <table class="" style="width:100%">
        <tr>
            <th>
            <p></p>
            </th>
        </tr>
        <tr>
            <td> 
                 <%= line_chart @atends.group_by_month(:data_atendimento).count,width: "395px", height: "390px",min:0,label: "Atendimentos",discrete: true,points: false%> 
            </td>
        </tr>
        </table>
    </div>
    </div>
</div> 
<div class="col-md-4 col-sm-4 ">
    <div class="x_panel tile fixed_height_320 overflow_hidden"  style="min-width: 580px;margin-left: -16px;height: auto;min-height: 494px;background: #ffffff;box-shadow: 0px 0px 3px #415467;">
    <div class="x_title" style="color: #4a6e90;">
        <h2>Processos<small></small></h2> 
        <div class="clearfix"></div>
    </div>
    <div class="x_content" style="padding: 27px;">
        <table class="" style="width:100%;">
        <caption><h2 style="color: #4a6e90;font-size: 22px;">Status do processo.</h2></caption>
        <tr>
            <th style="width:37%;">
            <p></p>
            </th>
            <th>
            <div class="col-lg-7 col-md-7 col-sm-7 ">
                <p class=""></p>
            </div>
            <div class="col-lg-5 col-md-5 col-sm-5 ">
                <p class=""></p>
            </div>
            </th>
        </tr>
        <tr>
            <td>

            <%= pie_chart @procs.group(:status_processo).count,donut:true,legend:false, width: "150px", height: "150px", colors: ["#4a6e91", "#2C7","#fa2"]%> 
            </td>
            <td>
            <table class="tile_info">
                <tr >
                <td>
                    <p><i class="fa fa-square blue" style="color:#4a6e91"></i>Aberto </p>
                </td>
                <td>
                    <% begin %>
                        <%= @porcentagem_status_aberto.round(0)  %>%
                    <% rescue %>
                    N/D
                    <% end %>
                </td>
                </tr>
                <tr>
                <td>
                    <p><i class="fa fa-square red" style="color:#22cc77"></i>Concluido </p>
                </td> 
                <td>
                    <% begin %>
                        <%= @porcentagem_status_concluido.round(0)  %>%
                    <% rescue %>
                        N/D
                    <% end %>
                </td>
                </tr>
                <tr>
                <td>
                    <p><i class="fa fa-square green" style="color:#ff9900"></i>Em andamento </p>
                </td> 
                <td>
                    <% begin %>
                        <%= @porcentagem_status_em_andamento.round(0)  %>%
                    <% rescue %>
                    N/D
                    <% end %>
                </td>
                </tr>
            </table>
            </td>
        </tr>
        </table>
        <div ><small class="numeros_g"><%= @qtd_procs%></small> <br><span style="font-size: 18px;color: #4a6e90" >Processos cadastrados no sistema.</span></div>
        <div ><small class="numeros_g"><%= @favoritos%></small> <br><span style="font-size: 18px;color: #4a6e90">Processos com <i class="fa fa-heart"></i>.</span></div>
    </div>
    </div>
</div>  
