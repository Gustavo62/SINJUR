
 <div id="index"> 
    <div>
      <div class="col-md-5 col-sm-5   form-group pull-right top_search" style="width:100%;text-align:center">
        
      <div class="col-md-6 col-sm-6  "style="width:100%">
        <div class="x_panel" >
          <div class="x_title">
            <%= form_tag(processos_path, method: :get) do %> 
              <h2 style="width: 100%;text-align: initial;">Processos 
                  <small style="float: right;text-align: end;">Numero:<%= text_field_tag 'n_processo', nil, type:'integer', placeholder:"N° Atendimento",class:"form-control",style:"width:15%" %>  
                  | Status:
                  <%= select_tag "status", raw("<option>Todos</option><option>Aberto</option><option>Em processamento</option><option>Concluido</option>"),class:"form-control",style:"width: auto;"%> 
                  | Favorito:
                  <%= check_box_tag 'favorito'%> 
                  | <%= text_field_tag 'intervalo_atend', nil, type:'date', placeholder:"Ex: 10/02/2020",class:"form-control",style:"width: auto;" %>
                  <%= submit_tag "Consultar", class:'btn btn-success'  %>
                  </small>
              </h2>
            <% end %>
                
            
              
            <div class="clearfix"></div>
          </div>
          <div class="x_content">

            <table class="table table-striped" style="width: inherit;">
              <thead>
                <tr>
                  <th>#</th> 
                  <th>Status</th>
                  <th>Favorito</th>
                  <th>Assunto</th>
                  <th>Etiqueta</th>
                  <th>Data Criação</th>
                  <th>Data Modificação</th>
                </tr>
              </thead>
              <tbody>
              <% @processo_aux.each do |processos|%>
                
                  <tr align="center">
                    <td><%= processos.id%></td>
                    <td><%= processos.status_processo%></td>
                    <td>
                      <% if processos.favorito == "1"%>
                        <i class="fa fa-heart"></i>
                      <% else %>
                        <i class="fa fa-heart-o"></i>
                      <% end %>
                    </td>   
                    <td><%= processos.assunto%></td>
                    <td><%= processos.etiqueta%></td>
                    <td><%= processos.created_at.strftime("%d/%m/%Y")%></td>
                    <td><%= processos.updated_at.strftime("%d/%m/%Y")%></td>
                    <div id="interacoes">
                      <td class="opt"><i class="fa fa-ellipsis-v"></i>
                      <div class="bts">
                      <%= button_to 'Visualizar' , cadastro_atendimento_path(processos.cadastro_atendimento_id), method: :get, style:"width:100px;margin: auto;",class:'btn btn-success'%>
                      </div>
                      </td>
                    </div>
                  </tr> 
                
              <% end %> 
              </tbody>
            </table> 
          </div>
        </div>
      </div> 
      <div class="clearfix"></div> 
    </div>
  </div>
</div>
