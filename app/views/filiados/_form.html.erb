<div class="clearfix"></div>
  <div class="row">
    <div class="col-md-6 " style="width:100%;font-size:18px"">
      <%= form_with(model: filiado, local: true,style:"margin-top: -15%;") do |f| %>
        <div class="x_panel">
          <div class="x_title">
            <h2 style="width:100%"><%=@acao%> Filiado
            <small class="actions-form">
              <%= link_to 'Voltar', filiados_path,class:"fa fa-reply"  %>
              <div style="float: right;margin-left: 10px;">
                <%= f.submit "Enviar", class:"btn btn-success",style:"width: 115px;font-size: 18px;"%>
              </div> 
              </small>
            </h2> 
            <div class="clearfix"></div>
          </div>
          <div class="x_content" style="font-size: 22px;float: none;">  
            <div class="filiados">
              <h2>Informações do Filiado <i class="fa fa-user"></i></h2>
              <% if filiado.errors.any? %>
                <div id="error_explanation">
                  <h2 class="msg_erro"><%= pluralize(filiado.errors.count, "") %> <span style="color:red;text-decoration:underline">Erros</span> encontrados, resolva para poder enviar as informações:</h2>

                  </ul>
                </div>
              <% end %>
              <div class="filiados-form" >  
                <div class="field">
                  <%= f.label :nome%>: 
                  <%= f.text_field :nome, placeholder:"Informe o nome completo do Filiado", style:"font-size: 18px;width: 94%;" %>
                </div>  
                <br>
                <div class="field">
                  <%= f.label :logradouro %>:
                  <%= f.text_field :logradouro, placeholder:"Ex: Rua Filadelfia Moreira", style:"font-size: 18px;width: 70%;" %> 
                  <%= f.label :numero %>:
                  <%= f.text_field :numero_casa, placeholder:"Ex: A1", style:"font-size: 18px;width: 13.2%;"  %>
                </div>
                <div class="field">
                  <%= f.label :complemento %>: 
                  <%= f.text_field :complemento, placeholder:"Pontos de referêcia", style:"font-size: 18px;width: 88.5%;"  %>
                </div>
                <div class="field">
                  <%= f.label :bairro %>: 
                  <%= f.text_field :bairro, placeholder:"Ex: Aldeota", style:"font-size: 18px;width: 20%;"  %>
                  <%= f.label :cidade%>: 
                  <%= f.text_field :cidade, placeholder:"Ex: Fortaleza", style:"font-size: 18px;width: 14%;" %>
                  <%= f.label :cep%>:
                  <%= f.text_field :cep, placeholder:"Ex: 00000-0000", style:"font-size: 18px;width: 14%;",maxlength:"9"   %> 
                  <label>Telefone Fixo:</label>
                  <%= f.text_field :telefone_fixo_casa, placeholder:"Ex: 0000-0000", style:"font-size: 18px;width: 14%;",maxlength:"10"   %> 
                </div>   
                <br>
                <div class="field" aligh="center">
                  <%= f.label :cnpj %>: 
                  <%= f.text_field :cnpj, placeholder:"Ex: 00.000.000/0000-00",style:"font-size: 18px;width: 14%;",maxlength:"14"  %>
                  <%= f.label :cei %>:
                  <%= f.text_field :cei, placeholder:"Ex: 000000",style:"font-size: 18px;width: 14%;",maxlength:"14"  %>
                  <%= f.label :serventia %>:
                  <%= f.text_field :serventia, placeholder:"Ex: 000000",style:"font-size: 18px;width: 14%;",maxlength:"6"  %>
                </div>
                <br>
                <div class="field">
                  <%= f.label :email %>: 
                  <%= f.text_field :email, placeholder:"Ex: exemplo@exemplo.com", style:"font-size: 18px;width: 94.5%;"  %>
                </div>
              </div> 
            </div> 
          </div> 
        </div> 
      <% end %> 
    </div>
  </div>
</div>