<div style="text-align:center">
<div class="container body" style="text-align:center;font-size:18px">
  <div class="main_container" style="text-align:center"> 

    <!-- top navigation --> 
    <!-- page content --> 
      <div class="" style="text-align:center"> 

        <div class="clearfix"  style="text-align:center"></div>

        <div class="row" style="display: block;text-align:center"">
          <div class="col-md-6 col-sm-6  " style="width: 100%;margin-left: auto;margin-right: auto;text-align: center;">
            <div class="x_panel" style="color: #2a3f53;
    text-align: center;
    width: 100%;
    background: #ffffff;
    font-family: Gilroy;">
              <div class="x_title">
                <%= form_tag(filiados_path, method: :get) do %>
                  <div class="col-md-5 col-sm-5   form-group pull-right top_search" style="width:100%;text-align:center">
                    <div class="input-group"> 
                      <h2 style="width: 100%;
    text-align: initial;
    font-family: Gilroy ExtraBold;">Filiados
                        <small style="float: right;text-align: end;font-size: 20px;">
                          Cidade: <%= text_field_tag 'cidade', nil, type:'text', placeholder:"Ex: Fortaleza", class:"form-control", style:"width: 20%; 
    font-size: 20px;
    border-radius: 2px;
    background: transparent;
    border: 2px solid #26b99a;
    color: white;"%>
                          Serventia: <%= text_field_tag 'serventia', nil, type:'integer', placeholder:"Ex: 000000",  class:"form-control", style:"width: 30%; 
    font-size: 20px;
    border-radius: 2px;
    background: transparent;
    border: 2px solid #26b99a;
    color: white;"%>
                          <span class="input-group-btn"> 
                            <%= submit_tag "Consultar",  id:"btn_consulta_escuro", style:"font-size: 20px;"%>
                          </span>  
                        </small>
                      </h2>
                    </div>
                  </div>
                <% end %>  
                <div class="clearfix"></div>
              </div>
              <div class="x_content" style="text-align:center">

                <table class="table"  style="width:100%">
                  <thead>
                    <tr>
                      <th>Nome</th>  
                      <th>Serventia</th>
                      <th>Email</th>  
                      <th>Cidade</th> 
                    </tr>
                  </thead>
                  <tbody>
                    <% @filiados.each do |filiado| %>
                      <tr>
                        <td><%= filiado.nome%></td>  
                        <td><%= filiado.serventia %></td> 
                        <td><%= filiado.email %></td>
                        <td style="width: 18%;"><%= filiado.cidade %></td>
                        <td style="width:7%;padding:2px"><%= button_to 'Visualizar' , filiado, method: :get,class:'btn_view',style:"width: 100%;"%></td>
                        <td style="width:7%;padding:2px"><%= button_to 'Editar', edit_filiado_path(filiado), method: :get,class:'btn_edit',style:"width: 100%;"%></td>
                        <td style="width:7%;padding:2px"><%= button_to 'Excluir', filiado, method: :delete, remote: true,onclick:'return ConfirmDelete(this)',class:'btn_eraser',style:"width: 100%;"%></td>
                        
                      </tr>
                      <script>
                        function ConfirmDelete(button) {
                          alertify.confirm("<p style='font-size:15px'>Deseja excluir o Filiado <%= filiado.nome%> ?</p><br><p style='font-size:15px'>Serventia: <%= filiado.serventia%></p><br><p style='font-size:15px'>CNPJ: <%= filiado.cnpj%></p><br><p style='color:red'>esta ação não pode ser desfeita.<p>", function() {
                            button.form.submit() 
                          }, function() {
                            alertify.error("Você cancelou a ação");
                          }).set('defaultFocus', 'Cancelar');

                          return false;
                        }
                      </script>
                    <% end %> 
                    
                  </tbody>
                  
                </table>
                <div style="float: none;display: flow-root;">
              <%= paginate @filiados,style:"text-align:center"%>
              <div class="atv">
                <div class="add">
                  <%= link_to '',new_filiado_path,method: :get,class:"fa fa-plus",style:"background: aliceblue;border: 7px solid #6285a4;background: #00fbcf;font-size: 43px;border-radius: 30px;padding: 2px 7px;text-align: left;padding-right: 83px;position: fixed;top: 88%;left: 97%;float: right;z-index: 9;color: #6284a4;border-style: double;"%>
                </div>
                  <span class="add_atv">Adicionar Filiado  </span> 
              </div>
              <div class="clearfix"></div>
            </div> 
              </div>
            </div> 
                     
          </div> 
          <div class="clearfix"></div>
          
        </div>
      </div> 
  </div>
</div>  
</div>