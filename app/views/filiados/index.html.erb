<div style="text-align:center">
<div class="container body" style="text-align:center;font-size:18px">
  <div class="main_container" style="text-align:center"> 

    <!-- top navigation --> 
    <!-- page content --> 
      <div class="" style="text-align:center"> 

        <div class="clearfix"  style="text-align:center"></div>

        <div class="row" style="display: block;text-align:center"">
          <div class="col-md-6 col-sm-6  " style="width: 100%;margin-left: auto;margin-right: auto;text-align: center;">
            <div class="x_panel" style="text-align:center;width: 100%;">
              <div class="x_title">
                <%= form_tag(filiados_path, method: :get) do %>
                  <div class="col-md-5 col-sm-5   form-group pull-right top_search" style="width:100%;text-align:center">
                    <div class="input-group"> 
                      <h2 style="width: 100%;text-align: initial;">Contatos
                        <small style="float: right;text-align: end;font-size: 20px;">
                          Cidade: <%= text_field_tag 'cidade', nil, type:'text', placeholder:"Ex: Fortaleza", class:"form-control", style:"width: 20%;margin-right: 63px;font-size: 20px;"%>
                          Serventia: <%= text_field_tag 'serventia', nil, type:'integer', placeholder:"Ex: 000000",  class:"form-control", style:"width: 30%;font-size: 20px;margin-right: 64px;"%>
                          <span class="input-group-btn"> 
                            <%= submit_tag "Consultar",  class:"btn btn-success", style:"font-size: 20px;"%>
                          </span>  
                        </small>
                      </h2>
                    </div>
                  </div>
                <% end %>  
                <div class="clearfix"></div>
              </div>
              <div class="x_content" style="text-align:center">

                <table class="table"  style="width:100%">
                  <thead>
                    <tr>
                      <th>Nome</th> 
                      <th>Cnpj</th> 
                      <th>Serventia</th> 
                      <th>Cidade</th> 
                    </tr>
                  </thead>
                  <tbody>
                    <% @filiados.each do |filiado| %>
                      <tr>
                        <td><%= filiado.nome%></td> 
                        <td><%= filiado.cnpj %></td> 
                        <td><%= filiado.serventia %></td> 
                        <td><%= filiado.email %></td>
                        <td><%= filiado.cidade %></td>
                        <div id="interacoes">
                          <td class="opt"><i class="fa fa-ellipsis-v"></i>
                          <div class="bts">
                            <%= button_to 'Editar', edit_filiado_path(filiado), method: :get, style:"width:100px;margin: auto;",class:'btn btn-success'%>
                            <%= button_to 'Deletar', filiado, method: :delete, data: { confirm: 'Are you sure?' }, style:"width:100px;margin: auto;",class:'btn btn-success'%>
                          </div>
                          </td>
                        </div>
                      </tr>
                    <% end %> 
                    
                  </tbody>
                </table>

              </div>
            </div>
            <div>
            <%= link_to 'Adicionar', new_filiado_path,  class:"btn btn-success", style:"color: #000;padding: 5px;margin-left: 91%;font-size:14px"%>
            </div>          
          </div> 
          <div class="clearfix"></div>
          
        </div>
      </div> 
  </div>
</div>  
</div>