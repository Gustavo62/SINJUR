
<body  style="background-color:#f7f7f7">
  <div class="login" style="background-color:#f7f7f7">
    <div>
      <a class="hiddenanchor" id="signup"></a>
      <a class="hiddenanchor" id="signin"></a>

      <div class="login_wrapper">
        <div class="animate form login_form">
          <section class="login_content">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>

              <div class="field">
                <%= f.label :email %><br />
                <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
              </div>

              <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
              <% end %>

              <div class="field">
                <%= f.label :password %> <i>(se estiver em branco não será alterado)</i><br />
                <%= f.password_field :password, autocomplete: "new-password" %>
                <% if @minimum_password_length %>
                  <br />
                  <em><%= @minimum_password_length %> caracteres no minimo</em>
                <% end %>
              </div>

              <div class="field">
                <label>Confirmação da senha</label><br />
                <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
              </div>

              <div class="field">
                <label>Senha atual</label> <i>(coloque a senha atual para que as alteração sejam aplicadas)</i><br />
                <%= f.password_field :current_password, autocomplete: "current-password" %>
              </div>

              <div class="actions">
                <%= f.submit "Update", class:"btn btn-success", style:"float: right;"%>
                <%= link_to "Back", :back %>
              </div>
            <% end %> 

            
          </section>
        </div>
      </div>
    </div>
  </div>
</body>
