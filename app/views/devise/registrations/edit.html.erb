<script>
  function Login(button) {
    alertify.defaults.glossary.title = 'Termos de uso';
    var pre = document.createElement('pre');
    //custom style.
    pre.style.maxHeight = "auto";
    pre.style.margin = "0";
    pre.style.padding = "24px";
    pre.style.whiteSpace = "pre-wrap";
    pre.style.textAlign = "justify";
    pre.appendChild(document.createTextNode($('#la').text()));
    //show as confirm
    alertify.confirm(pre, function(){
            button.form.submit() 
        },function(){
            alertify.error('Você recusou.');
        }).set({labels:{ok:'Sim, aceito os termos.', cancel: 'Recusar os termos.'}, padding: false});
    
  return false;
}
</script>  
