
<div class="row">
  <div class="col-md-6 " style="width:100%;font-size:18px"> 
    <div class="x_panel" style="height: auto;min-height: 96%;color: #2a3f53;text-align: center;width: 100%;background: #ffffff;font-family: Gilroy;">
      <%= form_with(model: assunto_atendimento, local: true,style:"margin-top: -15%;") do |f| %>
        <div class="x_title">
          <h2 style="width: 100%;font-family: Gilroy ExtraBold;text-align: left;"><%=@acao%> Assunto
            <small class="actions-form" style="float: right;">
              <%= link_to 'Voltar', ferramentas_atendimento_index_path,class:"modal__btn", style:"font-size: 18px;padding: 8px;"%>
              <div style="float: right;margin-left: 10px;">
                <%= f.submit "Enviar", class:"modal__btn modal__btn-primary",style:"margin-right: 3px;font-size: 18px;font-family: Gilroy ExtraBold;"%>
              </div> 
            </small>
          </h2> 
          <div class="clearfix"></div>
        </div>
        <div class="x_content" style="font-size: 26px;">  
          <div class=contato>
            <h2 style="font-size: 26px;">Informações do Assunto <i class="fa fa-list-alt"></i></h2>
            <div class="contato-form" style="width: 886px;"> 
              <div class="field" style="margin-left: 17px;">
                <%= f.label :assunto %>*:
                <%= f.text_field :assunto,required:true, style:"width: 81.7%;"%>
              </div>

              <div class="field">
                <%= f.label :descricao %>:
                <%= f.text_area :descricao, style:"width: 80%;"%>
              </div>
            </div>
          </div>
        </div>   
      <% end %>  
    </div>   
  </div>
</div> 
