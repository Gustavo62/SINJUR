
<div class="clearfix"></div>
<div class="row">
  <div class="col-md-6 ">
    <div class="x_panel" style="color: aliceblue;background: #f0f0f0;border: 2px solid #dfdfdf;border-radius: 6px;height:576px;width: 100%;float: none;margin-left: auto;margin-right: auto;">
      <%= form_with(model: restrito_tela_agenda_atividade, local: true, class:"form-horizontal form-label-left") do |form| %>
        
        <div class="x_content" class="contato-form"> 
            
          <div id="atividades">
            <div class="item form-group" style="margin-left: -2px;">
