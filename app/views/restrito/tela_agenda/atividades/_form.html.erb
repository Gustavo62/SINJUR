              </div>
            </div>

            <br>

            <div class="item form-group" style="margin-left: 21px;"> 
              <label style="margin-left: 14px;">Tipo:</label>
              <div class="form_atividades" style="width:130px">
                <%= form.select :tipo, ['Atividade', 'Lembrete', 'Agendamento']%>
              </div>  
              <label style="margin-left: 48px;">Status:</label>
              <div class="form_atividades">
                <%= form.select :status,['Aberto', 'Concluido'], class:"form_atividades"  %>
              </div>
            </div>   

            <br>

            <div class="item form-group">
              <label style="margin-left: 32px;">Nível:</label>
              <div class="form_atividades">
                <%= form.select :nivel, ['Alto', 'Médio', 'Baixo'], class:"form-control"  %>  
              </div>
            </div> 
            <br>
            
            <div class="item form-group">
              Resumo:
              </label>
              <div class="col-md-6 col-sm-6 ">
                <%= form.text_area :resumo, style:"margin-left:13px;width: 355px;min-height: 181px;padding: 7px;", placeholder:"Detalhes da atividade",required: true%>
              </div>
            </div> 
            <br>  
            <br>
          </div>
        </div>
      </div> 
      <footer class="modal__footer" style="margin-left: 0px;">  
        <%= link_to "Voltar", restrito_tela_agenda_atividades_path,class:"modal__btn",style:"font-family: Gilroy ExtraBold;float: left;"%>  
        <%= form.submit 'Enviar' ,class:"modal__btn modal__btn-primary",style:"font-family: Gilroy ExtraBold;float: right;"%> 
      </footer>
    <% end %> 
  </div>
</div> 
