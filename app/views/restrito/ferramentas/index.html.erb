<h3>Ferramentas >> Consulta de Solicitante</h3>
<%= form_tag(restrito_ferramentas_index_path, method: :get) do %>
  <h3>Cpf:
  <%= text_field_tag 'cpf', nil, type:'text', placeholder:"Ex: 00000000000"%>
  <%= submit_tag "Consultar" %></h3>
<% end %>  
<h1>Solicitantes</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Cpf</th>
      <th>Telefone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @solicitantes_aux.each do |solicitante| %>
      <tr>
        <td><%= solicitante.nome %></td>
        <td><%= solicitante.cpf %></td>
        <td><%= solicitante.telefone %></td>
        <td><%= link_to 'Show', solicitante %></td>
        <td><%= link_to 'Edit', edit_solicitante_path(solicitante) %></td>
        <td><%= link_to 'Destroy', solicitante, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br> 