<div class="simple-calendar">
  <div class="content-heading">
    <div class="calendar-heading" style="float:left;width: 39%;">   
      <p><%= link_to calendar.url_for_previous_view do %>
        <i class="fa fa-caret-left" style="font-size: 26px;color: #1abb9c;vertical-align: middle;"></i></p>
      <% end %> 
      <b id="nome"><span class="calendar-title" style="font-family: Gilroy ExtraBold;"><%= t('date.month_names')[start_date.month] %> de <%= start_date.year %></span></b> 
      <p><%= link_to calendar.url_for_next_view do %>
        <i class="fa fa-caret-right" style="font-size: 26px;color: #1abb9c;vertical-align: middle;"></i></p>
      <% end %>  
    </div>
    <div>    

      <div class="input-group" style="background: #2a3f53; width: 61.0%; height: 80px;color: #1abb9c;  border-left: 0px solid;border-right: 4px solid #1abb9c;font-family: Gilroy; padding: 8px;float: right;margin-bottom: 0px;margin-right: 0px;">
        <div style="padding: 2px;text-align: center;font-size: 21px;">
          <%= form_tag(restrito_tela_agenda_atividades_path, method: :get) do %>
            <h3 style="float: right;">Tipo:
              <%= select_tag "tipo", raw("<option>Todos</option><option>Atividade</option><option>Lembrete</option><option>Agendamento</option>"),class:"form-control",style:"border-radius: 4px;padding: 2px;margin-right: 17px;width: 151px;background: #2a3f52;;font-size: 20px;color: #f0feff;border:2px solid #1abb9c;"%> 
              Nivel: 
              <%= select_tag "nivel", raw("<option>Todos</option><option>Alto</option><option>MÃ©dio</option><option>Baixo</option>"), class:"form-control",style:"border-radius: 4px;padding: 2px;margin-right: 17px;width: 100px;font-size: 20px;background: #2a3f52;;color: #f0feff;border:2px solid #1abb9c;"%> 
              Data:
              <%= text_field_tag 'agendamento', Time.now.strftime("%d/%m/%Y"),type:"date",class:"form-control",style:"border-radius: 4px;padding: 2px;margin-right: 17px;width: 219px;text-align: end;border:2px solid #1abb9c;font-size: 18px;background: #2a3f52;color: #f0feff;"%>
              <button id="btn_consulta">
              Consultar
              </button>
            </h3>
          <% end %> 
        </div>  
      </div> 
    </div>
  </div>  
  <table class="table table-striped">
    <thead>
      <tr>
        <% date_range.slice(0, 7).each do |day| %>
          <th><%= t('date.abbr_day_names')[day.wday] %></th>
        <% end %>
      </tr>
    </thead>

    <tbody>
      <% date_range.each_slice(7) do |week| %>
        <tr>
          <% week.each do |day| %>
            <%= content_tag :td, class: calendar.td_classes_for(day) do %>
              <% if defined?(Haml) && respond_to?(:block_is_haml?) && block_is_haml?(passed_block) %>
                <% capture_haml(day, sorted_events.fetch(day, []), &passed_block) %>
              <% else %>
                <% passed_block.call day, sorted_events.fetch(day, []) %>
              <% end %>
            <% end %>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>  